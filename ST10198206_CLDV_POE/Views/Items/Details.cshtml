@model ST10198206_CLDV_POE.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Item Details</h1>

<div class="container">
    <div class="card my-4">
        <div class="card-header bg-info text-white">
            <h4>Item Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Item Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemName)</dd>

                <dt class="col-sm-3">Item Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemDescription)</dd>

                <dt class="col-sm-3">Item Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemPrice)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning mx-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
    </div>
</div>
