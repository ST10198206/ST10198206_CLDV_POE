@model ST10198206_CLDV_POE.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Item</h1>

<div class="container">
    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
    <div class="card my-4">
        <div class="card-header bg-warning text-white">
            <h4>Item Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Item Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemName)</dd>

                <dt class="col-sm-3">Item Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemDescription)</dd>

                <dt class="col-sm-3">Item Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemPrice)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
    </form>
</div>
